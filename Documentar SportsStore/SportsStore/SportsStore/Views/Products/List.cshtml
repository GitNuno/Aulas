@*view models permitem passar informação combinada para as view*@
@*para além dos produtos passo tb info sobre a paginação*@
@*ver _viewImports*@
@*Orig.: IEnumerable<Product>*@
@model ProductsListViewModel
@{
     ViewData["Title"] = "List";
 }

    <h2>Product List</h2>

    <!-- Vou ter os produtos de FakeProducts ou EFProduct (ver startup.cs) -->
    <!-- fazer url: //localhost:58677/products/list (neste momento para poder ver) -->
    @*nota: já não está a passar um IEnumerable, isso implica mudar isso no controlador*@
    @foreach (Product p in Model.Products)
    {
        <div>
            <h3>@p.Name</h3>
            <p>@p.Description</p>
            <h4>@p.Price.ToString("c")</h4> <!-- (("c")) ver c# format specifier -->

        </div>

        <hr /> <!--barra horizontal-->
    }


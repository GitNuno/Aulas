@model PartyInvites.Models.RegExTestData

@{
    ViewData["Title"] = "Regular expressions test page";
}

<h2>Regular expressions test page</h2>

<form asp-action="Index" method="post">
    <table>
        <tr>
            <td>
                <label asp-for="PostalCode">Postal Code</label>
            </td>
            <td>
                <input asp-for="PostalCode" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="LicensePlate">License Plate</label>
            </td>
            <td>
                <input asp-for="LicensePlate" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Phone">Phone</label>
            </td>
            <td>
                <input asp-for="Phone" />
            </td>
        </tr>

        <tr>
            <td>
                <button type="submit">Test regular expressions</button>
            </td>
        </tr>
    </table>
    <div asp-validation-summary="All"></div>
</form>
<!-- Voltar á pagina Home -->
<a asp-action="../Home/Index">Go to Home page</a>


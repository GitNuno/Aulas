<!-- build solution + fechar tab + abrir List.cshtml -->
@model IEnumerable<Product>
@{
    ViewData["Title"] = "List";
}

<h2>Product List</h2>

<!-- Vou ter os produtos de FakeProducts ou EFProduct (ver startup.cs) -->
<!-- fazer url: //localhost:58677/products/list (neste momento para poder ver) -->
@foreach (Product p in Model)
{
    <div>
        <h3>@p.Name</h3>
        <p>@p.Description</p>
        <h4>@p.Price.ToString("c")</h4> <!-- (("c")) ver c# format specifier -->

    </div>

    <hr /> <!--barra horizontal-->
}

